# ===================================================================
# Astronomical Data Pipeline - Environment Variables Example
# Copy this file to .env and fill in your actual values
# ===================================================================

# ===== AWS CONFIGURATION =====
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here
AWS_SESSION_TOKEN=your_session_token_here

# ===== TERRAFORM CONFIGURATION =====
TF_VAR_environment=dev
TF_VAR_project_name=astro-data-pipeline
TF_VAR_aws_region=us-east-1

# ===== DATABASE CONFIGURATION =====
DATABASE_URL=postgresql://astro_user:password@localhost:5432/astro_catalog
DATABASE_USERNAME=astro_user
DATABASE_PASSWORD=your_secure_password_here
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=astro_catalog

# ===== SPRING BOOT CONFIGURATION =====
SPRING_PROFILES_ACTIVE=dev
SERVER_PORT=8080
LOG_LEVEL_APP=INFO
LOG_LEVEL_SPRING=WARN

# ===== KUBERNETES CONFIGURATION =====
KUBECONFIG=~/.kube/config
KUBE_NAMESPACE=astro-pipeline

# ===== AIRFLOW CONFIGURATION =====
AIRFLOW_ENDPOINT=http://localhost:8080
AIRFLOW_USERNAME=admin
AIRFLOW_PASSWORD=admin

# ===== S3 BUCKET CONFIGURATION =====
S3_RAW_DATA_BUCKET=astro-raw-data-dev
S3_PROCESSED_DATA_BUCKET=astro-processed-data-dev
S3_ARCHIVE_BUCKET=astro-archive-dev

# ===== MONITORING CONFIGURATION =====
PROMETHEUS_ENDPOINT=http://localhost:9090
GRAFANA_ENDPOINT=http://localhost:3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin

# ===== PROCESSING CONFIGURATION =====
FITS_PROCESSING_TIMEOUT=PT30M
MAX_CONCURRENT_JOBS=4
PROCESSING_THREAD_POOL_SIZE=8

# ===== DEVELOPMENT TOOLS =====
SONAR_HOST_URL=http://localhost:9000
SONAR_LOGIN=your_sonar_token_here

# ===== PERFORMANCE TESTING =====
LOAD_TEST_DURATION=300
LOAD_TEST_USERS=50
DB_PERFORMANCE_ITERATIONS=1000

# ===== FEATURE FLAGS =====
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_SECURITY=true
ENABLE_CACHING=true